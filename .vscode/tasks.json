{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build raytrace",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "command": "g++",
            "args": [
                "-o ${workspaceFolder}/dist/raytrace",
                "-g",
                "-std=c++17",
                "-Werror",
                "-Wpedantic",
                "-Wall",
                "-Wextra",
                "*.cpp",
                "-I${workspaceFolder}/third_party/stb"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}